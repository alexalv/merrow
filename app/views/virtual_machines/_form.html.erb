<%= simple_form_for @virtual_machine, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>

  <%= f.association :vmconfig %>

  <%= f.association :os_image, label_method: :system, value_method: :id %>

  <%= f.input :description %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                virtual_machines_path, :class => 'btn' %>
  </div>

<% end %>
