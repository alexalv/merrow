<%- model_class = VirtualMachine -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @virtual_machine.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vmconfig_id) %>:</strong></dt>
  <dd><%= @virtual_machine.vmconfig_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @virtual_machine.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:macaddr) %>:</strong></dt>
  <dd><%= @virtual_machine.macaddr %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              virtual_machines_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_virtual_machine_path(@virtual_machine), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              virtual_machine_path(@virtual_machine),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
