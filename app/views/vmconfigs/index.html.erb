<%- model_class = Vmconfig -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:memory) %></th>
      <th><%= model_class.human_attribute_name(:vcpu) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vmconfigs.each do |vmconfig| %>
      <tr>
        <td><%= link_to vmconfig.id, vmconfig_path(vmconfig) %></td>
        <td><%= vmconfig.name %></td>
        <td><%= vmconfig.description %></td>
        <td><%= vmconfig.memory %></td>
        <td><%= vmconfig.vcpu %></td>
        <td><%=l vmconfig.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vmconfig_path(vmconfig), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vmconfig_path(vmconfig),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vmconfig_path,
            :class => 'btn btn-primary' %>
